datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AshaWorker {
  id             Int             @id @default(autoincrement())
  full_name      String
  mobile_number  String          @unique
  created_at     DateTime        @default(now())
  patients       Patient[]
  reports        Report[]
  upcomingVisits UpcomingVisit[]
}

model OTPVerification {
  id            Int      @id @default(autoincrement())
  mobile_number String
  otp_code      String
  expires_at    DateTime
  created_at    DateTime @default(now())
}

model Patient {
  id           Int        @id @default(autoincrement())
  name         String
  age          Int
  gender       String
  address      String
  health_notes String?
  created_at   DateTime   @default(now())
  ashaWorkerId Int
  ashaWorker   AshaWorker @relation(fields: [ashaWorkerId], references: [id])
}

model Report {
  id             Int        @id @default(autoincrement())
  date           DateTime
  issues         String
  created_at     DateTime   @default(now())
  asha_worker_id Int
  asha_worker    AshaWorker @relation(fields: [asha_worker_id], references: [id])
}

model UpcomingVisit {
  id             Int        @id @default(autoincrement())
  visit_date     DateTime
  patient_name   String
  note           String?
  asha_worker_id Int
  asha_worker    AshaWorker @relation(fields: [asha_worker_id], references: [id])
}